<% if leave_day.leave_day_type == "leave_day" %>
  Leave Day
<% elsif leave_day.leave_day_type == "absent_day" %>
  Absent Day
<% elsif leave_day.leave_day_type == "sick_day"%>
  Sick Day
<% elsif leave_day.leave_day_type == "comp_time"%>
  Compensatory Time-off
<% elsif leave_day.leave_day_type == "comp_time_old"%>
  Compensatory Time-off(old) 
<% else %>
  Unknown leave day type <%= leave_day.leave_day_type %>
<% end %>
