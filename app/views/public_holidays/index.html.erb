<div class="panel panel-default">
  <div class="panel-heading">Listing Public Holidays
    <%= render "partials/year_selector", path: public_holidays_path %>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>Date</th>
        <th>Name</th>
        <th colspan="2"><%= link_to 'New Public holiday', new_public_holiday_path %></th>
      </tr>
    </thead>

    <tbody>
      <% @public_holidays.each do |public_holiday| %>
        <tr>
          <td><%= public_holiday.date.to_formatted_s(:pretty_date) %></td>
          <td><%= public_holiday.name %></td>
          <td><%= link_to raw('<i class="fa fa-pencil-square-o"></i>'), edit_public_holiday_path(public_holiday) %></td>
          <td><%= link_to raw('<i class="fa fa-trash-o"></i>'), public_holiday, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
