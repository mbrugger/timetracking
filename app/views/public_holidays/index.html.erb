<div class="panel panel-default">
  <div class="panel-heading"><%= I18n.t('views.public_holidays.title')%>
    <%= render "partials/year_selector", path: public_holidays_path %>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th><%= I18n.t('views.public_holidays.date')%></th>
        <th><%= I18n.t('views.public_holidays.name')%></th>
        <th colspan="2"><%= link_to I18n.t('views.public_holidays.new_public_holiday'), new_public_holiday_path %></th>
      </tr>
    </thead>

    <tbody>
      <% @public_holidays.each do |public_holiday| %>
        <tr>
          <td><%= public_holiday.date.to_formatted_s(:pretty_date) %></td>
          <td><%= public_holiday.name %></td>
          <td><%= link_to raw('<i class="fa fa-pencil-square-o"></i>'), edit_public_holiday_path(public_holiday) %></td>
          <td><%= link_to raw('<i class="fa fa-trash-o"></i>'), public_holiday, method: :delete, data: { confirm: I18n.t('views.public_holidays.are_you_sure') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
